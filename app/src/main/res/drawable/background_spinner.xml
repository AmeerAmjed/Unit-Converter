<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_action" />
            <corners android:radius="@dimen/radius" />
            <stroke
                android:width="@dimen/width_boarder"
                android:color="@color/primary" />
        </shape>
    </item>
    <item
        android:gravity="center_vertical|right"
        android:right="@dimen/spacing8">
        <layer-list>
            <item
                android:width="@dimen/spacing12"
                android:height="@dimen/spacing12"
                android:bottom="10dp"
                android:gravity="center">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/on_secondary" />
                        <corners android:radius="1dp" />
                    </shape>
                </rotate>
            </item>
            <item
                android:width="30dp"
                android:height="10dp"
                android:bottom="21dp"
                android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/background_action" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>

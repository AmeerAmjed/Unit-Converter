<resources>
    <!-- Base application theme. -->
    <style name="Theme.UnitConverter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>

        <item name="background">@color/background</item>
        <item name="backgroundColor">@color/background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="defaultTextStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/text_87</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="defaultTextStyle.onPrimary" parent="defaultTextStyle">
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="defaultTextStyle.onBackground" parent="defaultTextStyle">
        <item name="android:textColor">@color/on_background</item>
    </style>

    <style name="defaultTextStyle.normal" parent="defaultTextStyle">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="defaultTextStyle.title" parent="defaultTextStyle">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

</resources>